<div class="ui three statistics">
  <div class="statistic">
    <div class="value">
      <i class="archive icon"></i> {{model.pods.items.length}}
    </div>
    <div class="label">
      Pods
    </div>
  </div>
  <div class="statistic">
    <div class="value">
      <i class="configure icon"></i> {{model.services.items.length}}
    </div>
    <div class="label">
      Services
    </div>
  </div>
  <div class="statistic">
    <div class="value">
      <i class="angle double up icon"></i> {{model.replicationcontrollers.items.length}}
    </div>
    <div class="label">
      ReplicationControllers
    </div>
  </div>
</div>

<div class="ui two stackable cards">
{{#each model.nodes.items as |node|}}
  {{poll-stat node=node.metadata.name}}
{{/each}}
</div>
