<table class="ui definition table">
  <tbody>
    <tr>
      <td>Name</td>
      <td data-autoid="name">{{model.metadata.name}}</td>
    </tr>
    <tr>
      <td>Namespace</td>
      <td>{{model.metadata.namespace}}</td>
    </tr>
    <tr>
      <td>Creation timestamp</td>
      <td>{{model.metadata.creationTimestamp}}</td>
    </tr>
    <tr>
      <td>Phase</td>
      <td>{{model.status.phase}}</td>
    </tr>
    <tr>
      <td>Start time</td>
      <td>{{model.status.startTime}}</td>
    </tr>
    <tr>
      <td>Host IP address</td>
      <td>{{model.status.hostIP}}</td>
    </tr>
    <tr>
      <td>Pod IP address</td>
      <td>{{model.status.podIP}}</td>
    </tr>
    <tr>
      <td>Labels</td>
      <td data-autoid="labels">
        {{#each-in model.metadata.labels as |key value|}}
          <div class="ui basic violet label">
            {{key}} = {{value}}
          </div>
        {{else}}
          No labels
        {{/each-in}}
      </td>
    </tr>
  </tbody>
</table>
{{spec-details spec=model.spec containerStatuses=model.status.containerStatuses}}
