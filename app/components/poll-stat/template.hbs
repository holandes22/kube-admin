<h4 class="ui horizontal divider header">
  {{node}}
</h4>
<div class="ui grid">
  <div class="two column row">
    <div class="column">
      {{#if poll.isRunning}}
        <div class="ui active mini inline loader"></div>
      {{/if}}
    </div>
    <div class="right aligned column">
    {{#if poll.isRunning}}
      <div class="ui basic teal button" {{action 'cancel'}}>
      Cancel polling
      </div>
    {{else}}
    <div class="ui basic teal button" {{action poll.perform}}>
      Continue polling
    </div>
    {{/if}}
    </div>
  </div>

  <div class="two column row">
    <div class="column">
      {{usage-bar percent=stat.cpu.percent
                  label="CPU"
                  color="blue"}}
    </div>
    <div class="column">
      {{usage-bar percent=stat.memory.percent
                  label="Memory"
                  color="purple"}}
    </div>
  </div>

  {{#if stat.filesystems}}
  <div class="row">
    <div class="column">
      <table class="ui inverted compact table">
        <thead>
          <tr>
            <th>Storage device</th>
            <th>Percentage</th>
          </tr>
        </thead>
        <tbody>
          {{#each stat.filesystems as |fs|}}
            <tr>
              <td>{{fs.device}}</td>
              <td class="{{if (eq fs.percentage 100) 'error' ''}}">
                {{#if (eq fs.percent 100)}}
                <i class="attention icon"></i>
              {{/if}}
              {{fs.percent}}%
              </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{/if}}

</div>
