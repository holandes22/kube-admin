<div class="ui cards">
  {{#each items as |item|}}
  <div class="card">
    <div class="content">
      <i class="right floated cube icon"></i>
      <div class="header">
        {{item.container.name}}
      </div>
    </div>
    <div class="content">
      <div class="ui basic {{item.readyColor}} label">
        {{item.readyLabel}}
      </div>
      <div class="ui basic {{item.stateColor}} label">
          {{item.stateLabel}}
      </div>
    </div>
    <div class="extra content">
      <div class="ui two buttons">
        {{link-to 'Details' 'pod.container' namespace pod item.container.name class="ui basic black button"}}
        {{link-to 'Log' 'pod.log' namespace pod item.container.name class="ui basic black button"}}
      </div>
    </div>
  </div>
  {{/each}}
</div>

