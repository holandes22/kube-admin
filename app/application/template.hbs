<div id="modal-context"></div>
<div class="ui visible inverted left vertical sidebar menu">
  {{#link-to "index" class="item"}}
    <h4 class="ui header"><span class="highlight-white">Kube</span><span class="highlight-blue">ADMIN</span></h4>
  {{/link-to}}
  <div class="item">
    <div class="ui inverted blue segment" data-autoid="host-menu">
      {{session.host}}
    </div>
  </div>
  {{#link-to "settings" class="item"}}
    <i class="setting icon"></i>
    Settings
  {{/link-to}}
  {{#link-to "pods" class="item"}}
    <i class="archive icon"></i>
    Pods
  {{/link-to}}
  {{#link-to "services" class="item"}}
    <i class="configure icon"></i>
    Services
  {{/link-to}}
  {{#link-to "replication-controllers" class="item"}}
    <i class="angle double up icon"></i>
    ReplicationControllers
  {{/link-to}}
</div>
<div class="pusher">
  <div class="main">
    {{#each flashMessages.queue as |flash|}}
      {{#flash-message flash=flash as |component flash|}}
        {{#if flash.componentName}}
          {{component flash.componentName content=flash.content}}
        {{else}}
          <div class="ui {{flash.type}} message">
            <p>{{flash.message}}</p>
          </div>
        {{/if}}
      {{/flash-message}}
    {{/each}}
    <br>
    <div class="ui container">
    {{outlet}}
    </div>
  </div>
</div>
