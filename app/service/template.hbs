<table class="ui definition table">
  <tbody>
    <tr>
      <td>Name</td>
      <td data-autoid="name">{{model.metadata.name}}</td>
    </tr>
    <tr>
      <td>Namespace</td>
      <td>{{model.metadata.namespace}}</td>
    </tr>
    <tr>
      <td>Creation timestamp</td>
      <td>{{model.metadata.creationTimestamp}}</td>
    </tr>
    <tr>
      <td>Cluster IP address</td>
      <td>{{model.spec.clusterIP}}</td>
    </tr>
    <tr>
      <td>Session affinity</td>
      <td>{{model.spec.sessionAffinity}}</td>
    </tr>
    <tr>
      <td>Labels</td>
      <td data-autoid="labels">
        {{#each-in model.metadata.labels as |key value|}}
          <div class="ui basic violet label">
            {{key}} = {{value}}
          </div>
        {{else}}
          No labels
        {{/each-in}}
      </td>
    </tr>
  </tbody>
</table>

{{#if model.spec.ports}}
<h4 class="ui horizontal divider header"><i class="sitemap icon"></i>Ports</h4>
{{ports-details ports=model.spec.ports}}
{{/if}}
